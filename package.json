{
  "name": "st-tst-testapp-front",
  "version": "1.0.0",
  "description": "System team test application",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"ng serve\" \"start chrome http://localhost:4200 \"",
    "build": "ng build --configuration=production --output-path=../st-tst-testapp-api/TestAppApi/wwwRoot",
    "lint-tests": "npx eslint ./tests",
    "karma:ci": "npx ng test --watch=false --browsers=ChromeHeadless --code-coverage --reporters=junit",
    "watch": "ng build --watch --configuration development",
    "startMockserverAndApp": "concurrently \"prism mock reference-app-mock.json\" \"ng serve\"",
    "testlocal": "start-server-and-test startMockserverAndApp 'http-get://localhost:4200/list' playwrightlocal",
    "playwrightlocal": "npx playwright test -g @local",
    "e2etest": "BASE_URL=${PW_BASE_URL:=https://st-devops-testfullapp-linux-webapp-test-1.azurewebsites.net} npx playwright test -g @smoketest",
    "test:pact": "jest --config ./jest.config.pact.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.1.1",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.1.1",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/router": "^16.1.0",
    "browsers": "^1.0.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.0",
    "@angular/cli": "~16.1.0",
    "@angular/compiler-cli": "^16.1.0",
    "@pact-foundation/pact": "^13.1.0",
    "@playwright/test": "latest",
    "@stoplight/prism-cli": "^5.0.1",
    "@types/jasmine": "~4.3.0",
    "@types/uuid": "^9.0.2",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "jasmine-core": "~4.6.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.1.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "rimraf": "^5.0.7",
    "start-server-and-test": "^2.0.0",
    "typescript": "~5.1.3"
  }
}
